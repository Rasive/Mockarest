{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "main/app/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}